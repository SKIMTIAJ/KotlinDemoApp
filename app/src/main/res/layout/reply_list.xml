<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/replyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Reply"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/replyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feedbackmessage"
        android:textSize="13sp"
        android:textColor="#6B6868"
        android:layout_marginTop="8dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/replyTitle"
        app:layout_constraintLeft_toLeftOf="@+id/replyTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>